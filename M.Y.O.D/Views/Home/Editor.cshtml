@model ViewModel
@{
    ViewBag.Title = "Editor";
    Layout = "~/Views/shared/_layout.cshtml";
}
@section link{
    <link href="~/Content/card.css" rel="stylesheet" />
}
@section navlog{
        <div class="col-xl-2 col-lg-2 col-md-6 col-sm-4 col-6">
            <a style="text-decoration:none;" href="#Menu"><h1 class="logo">M.Y.O.D S.A</h1></a>
        </div>
        <div class="col-xl-7 col-lg-7 col-md-2 col-sm-4 col-2">
            <div class="dropdown">
                <button onclick="myFunction()" class="dropbtn" style=" border: 3px solid White;
                                                                       border-radius: 10px;">
                    <i style="margin-right:2px;" class="fas fa-list-ul dropbtn"></i>
                </button>
                <div id="show" class="dropdown-content">
                    <a class="li a" href="#Menu">  التصاميم <i class="fas fa-hammer"></i> </a>
                    <a class="li a" href="#search">  البحث  <i class="fas fa-search"></i> </a>
                    <a class="li a" href="#about">  معلومات عنا  <i class="fas fa-address-card"> </i> </a>
                    <a class="li a" href="#Social">  وسائل التواصل <i class="fas fa-headphones-alt"> </i> </a>
                </div>
            </div>
        </div>
        <div class="Register col-xl-3 col-lg-3 col-md-4 col-sm-4 col-4">
            <a class="a-log" href="~/Index/Register"> <i style="margin-right:2px;" class="fas fa-user-plus"> </i> اضافة مستخدم </a>
            <a class="a-log" href="~/Home/Logout"><i style="margin-right:2px;font-size:20px;" class="fas fa-key"></i> تسجيل الخروج </a>
        </div>
}
<div style="text-align: center; margin: 15px; margin-top: -15px;" data-aos="flip-right" data-aos-duration="1000">
    @Html.ActionLink("اضافة تصميم جديد", "AddNew", "Home", new { @class = "NewItem" })
    @Html.ActionLink("اضافة فئه", "AddCategory", "Home", new { @class = "NewItem" })
</div>
<br />
<section class="MenSec" id="Menu" data-aos="zoom-in" data-aos-duration="1500">
    <label class="Title" data-aos="flip-right" data-aos-duration="1500"> التصاميم</label>
    <br /><br />
    @foreach (var item in Model.Categories)
    {
        <button class="show" style="display:flex;padding-bottom:30px;" data-aos="flip-up" data-aos-duration="1500">
            <p class="col-10" style="margin-right:-250px; margin-top:-10px;">&hearts; @item.Cat &hearts;</p>
            <div style="margin-top: -10px;" class="col-2">
                @Html.ActionLink("تعديل", "EditCat", "Home", new { id = item.ID, name = item.Cat }, new { @class = "btn Edit-button" })
                @Html.ActionLink("حذف", "DeleteCat", "Home", new { id = item.ID, name = item.Cat }, new { @class = "btn delete-button" })
            </div>
        </button>

        <div class="product">
            @foreach (var items in Model.Menu_Items)
            {
                if (items.CatID == item.ID)
                {
                    <div class="card-Index" data-aos="flip-down" data-aos-duration="1500">
                        <div>
                            <img class="img" src="@Url.Content(items.Path)" alt="@items.Category.Cat">
                        </div>
                        <p class="card-detail"> <span>السعر : </span> @Html.DisplayFor(w => items.price) جنيه</p>
                        <div style="margin-bottom:10px;">
                            @Html.ActionLink("تعديل", "Edit", "Home", new { id = items.Id, name = items.Category.Cat }, new { @class = "btn Edit-button" })
                            @Html.ActionLink("حذف", "Delete", "Home", new { id = items.Id, name = items.Category.Cat}, new { @class = "btn delete-button" })
                        </div>
                    </div>

                }
            }

        </div>
        <br />
    }
</section>
@section search{ }
