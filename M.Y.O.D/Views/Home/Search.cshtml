@model IEnumerable<menu_item>
@{
    ViewBag.Title = "Search-Result";
    Layout = "~/Views/shared/_layout.cshtml";
}

@section link{
    <nav class="container-fluid">
        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-4 col-6">
            <a style="text-decoration:none;" href="~/Home/Index"><h1 class="logo">M.Y.O.D S.A</h1></a>
        </div>
        <div class="col-xl-7 col-lg-7 col-md-3 col-sm-4 col-2">
            <div class="dropdown">
                <button onclick="myFunction()" class="dropbtn" style=" border: 3px solid White;
                                                                       border-radius: 10px;">
                    <i style="margin-right:2px;" class="fas fa-list-ul dropbtn"></i>
                </button>
                <div id="show" class="dropdown-content">
                    <a class="li a" href="~/Home/Index">  التصاميم <i class="fas fa-hammer"></i> </a>
                    <a class="li a" href="#search">  البحث  <i class="fas fa-search"></i> </a>
                    <a class="li a" href="#about">  معلومات عنا  <i class="fas fa-address-card"> </i> </a>
                    <a class="li a" href="#Social">  وسائل التواصل <i class="fas fa-headphones-alt"> </i> </a>
                </div>
            </div>
        </div>
        <div class="Register col-xl-2 col-lg-2 col-md-3 col-sm-4 col-4">
            <a class="a-log" href="~/Index/LogIn">تسجيل الدخول</a>
        </div>
    </nav>
}
@section navlog{
}


@section search{
    <section class="MenSec " data-aos="zoom-in" data-aos-duration="1500">

        <label class="Title" data-aos="flip-right" data-aos-duration="1500"> نتائج البحث عن تصاميم </label>
        <br /><br />
        @if (Model.Count() == 0)
        {
            <h2 class="text-danger" style="text-align:center;"> التصميم غير موجود</h2>
        }
        else if (ViewData["GetDetails"] == "")
        {
            <h2 class="text-danger" style="text-align:center;">أدخل اسم التصاميم المراد البحث عنها </h2>
        }
        else
        {
                <button class="show" onclick="openFunction();" data-aos="flip-up" data-aos-duration="1500">

                    <p> &hearts;التصاميم&hearts;</p>
                </button>



            <div class="product">

                @foreach (var item in Model)
                {
                    <div class="card-Index" data-aos="flip-down" data-aos-duration="1500">
                        <div>
                            <img class="img" src="@Url.Content(item.Path)" alt="@item.Category.Cat">
                        </div>
                        <p class="card-detail"> @Html.DisplayFor(w => item.price) جنيه</p>
                    </div>
                }
            </div>
        }

    </section>
}