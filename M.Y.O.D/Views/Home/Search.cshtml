@model IEnumerable<menu_item>
@{
    ViewBag.Title = "Search-Result";
    Layout = "~/Views/shared/_layout.cshtml";
}

@section link{
    <nav class="container-fluid">
        <div style="margin-left:5%;" class="col-xl-2 col-lg-2 col-md-4 col-sm-4 col-6">
            <a style="text-decoration:none;display:flex;" href="~/Home/Index"><h1 class="logo"> M.Y.O.D S.A </h1></a>
        </div>
        <div class="col-xl-8 col-lg-8 col-md-4 col-sm-4 col-2">
            <div class="dropdown">
                <button onclick="myFunction()" class="dropbtn" style=" border: 3px solid White;
                                                                           border-radius: 10px;">
                    <i style="margin-right:2px;" class="fas fa-list-ul dropbtn"></i>
                </button>
                <div id="show" class="dropdown-content">
                    <a class="li a" href="~/Home/Index"><i style="margin-right:2px;" class="fas fa-hammer"></i> Designs</a>
                    <a class="li a" href="#search"> <i style="margin-right:2px;" class="fas fa-search"></i>  Search Design </a>
                    <a class="li a" href="#about"> <i style="margin-right:2px;" class="fas fa-address-card"> </i>  About Us </a>          
                    <a class="li a" href="#Social"> <i style="margin-right:2px;" class="fas fa-headphones-alt"> </i>  Contacts </a>
                </div>
            </div>
        </div>
        <div class="Register col-xl-2 col-lg-2 col-md-4 col-sm-4 col-4">
            <a class="a-log" href="~/Index/LogIn">User LogIn</a>
        </div>
    </nav>
}
@section navlog{
}


@section search{
    <section class="MenSec " data-aos="zoom-in" data-aos-duration="1500">

        <label class="Title" data-aos="flip-right" data-aos-duration="1500"> Design Search</label>
        <br /><br />
        @if (Model.Count() == 0)
        {
            <h2 class="text-danger" style="text-align:center;"> Sorry , This Design Not Found </h2>
        }
        else if (ViewData["GetDetails"] == "")
        {
            <h2 class="text-danger" style="text-align:center;"> Please enter the category or item you want to search for !</h2>
        }
        else
        {
            if (ViewData["radio"]=="Item")
            {
                <button class="show" onclick="openFunction();" data-aos="flip-up" data-aos-duration="1500">

                        <p> &clubs; Menu Items &clubs;</p>
                </button>
            }
            else
            {
                <button class="show" onclick="openFunction();" data-aos="flip-up" data-aos-duration="1500">
                    @foreach (var items in Model)
                    {
                        <p>&clubs; @Html.DisplayFor(w => items.Category.Cat) &clubs;</p>
                    }
                </button>
            }


            <div class="product">

                @foreach (var item in Model)
                {
                    <div class="card-Index" data-aos="flip-down" data-aos-duration="1500">
                        <div>
                            <img class="img" src="@Url.Content(item.Path)" alt="@item.name">
                        </div>
                        <p class="card-text">&hearts; @Html.DisplayFor(w => item.name) &hearts;</p>
                        <p class="card-detail">Price : @Html.DisplayFor(w => item.price) pound</p>
                        <p class="card-detail">Details :@Html.DisplayFor(w => item.Description)</p>

                    </div>
                }
            </div>
        }

    </section>
}