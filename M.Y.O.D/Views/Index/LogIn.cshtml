@model logIn
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/shared/_layout.cshtml";
}
@section link{
    <link href="~/Content/LogIn.css" rel="stylesheet" />
}

@section navlog{
        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-4 col-6">
            <a style="text-decoration:none;" href="#Menu"><h1 class="logo">M.Y.O.D S.A</h1></a>
        </div>
        <div class="col-xl-7 col-lg-7 col-md-3 col-sm-4 col-2">
            <div class="dropdown">
                <button onclick="myFunction()" class="dropbtn" style=" border: 3px solid White;
                                                                       border-radius: 10px;">
                    <i style="margin-right:2px;" class="fas fa-list-ul dropbtn"></i>
                </button>
                <div id="show" class="dropdown-content">
                    <a class="li a" href="./Home/Index">  التصاميم <i class="fas fa-hammer"></i> </a>
                    <a class="li a" href="#search">  البحث  <i class="fas fa-search"></i> </a>
                    <a class="li a" href="#about">  معلومات عنا  <i class="fas fa-address-card"> </i> </a>
                    <a class="li a" href="#Social">  وسائل التواصل <i class="fas fa-headphones-alt"> </i> </a>
                </div>
            </div>
        </div>
}
<!-- Log In -->

<section data-aos="zoom-in" class="MenSec" data-aos-duration="1500">
    <p class="Title">تسجيل الدخول</p>
    <br />
    @using (Html.BeginForm("LogIn", "Index", FormMethod.Post, new { @class = "form-details" }))
    {
        @Html.AntiForgeryToken()
        <div class="Form">
            <div>
                <form action="Editor.html" method="post" class="form-details">
                    <div>
                        <img src="~/images/salmalogo.png" alt="M.Y.O.D" class="bali-form-img">
                    </div>
                    <div class="Items">
                        <div class="s-how">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger " })
                        </div>
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "label" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input", @placeholder = "الايميل" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @style = "font-size:18px;" })
                    </div>
                    <div class="Items">
                        @Html.LabelFor(model => model.pwd, htmlAttributes: new { @class = "label" })
                        @Html.EditorFor(model => model.pwd, new { htmlAttributes = new { @class = "input", @placeholder = "الباسورد" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.pwd, "", new
                        {
                            @class = "text-danger",
                            style = "font-size:18px;"
                        })
                    </div>
                    <div>
                        <input type="submit" class="submit" value="تسجيل الدخول">
                    </div>

                </form>
            </div>
        </div>
    }

</section>
@section search{ }
