<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/Index.css" rel="stylesheet" />
    <link href="~/Content/card.css" rel="stylesheet" />
    <link href="~/Content/header.css" rel="stylesheet" />
    @RenderSection("link")
    <link rel="icon" type="icon/png" href="~/images/salmalogo.png">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>M.Y.O.D S.A</title>
</head>
<body dir="rtl">
    <header style="position: relative;">
        <!-- navigation Bar -->
        <nav class="container-fluid" data-aos="fade-down" data-aos-duration="1000">
            @RenderSection("navlog")
        </nav>
    </header>
    <div>
        <div class="container" data-aos="zoom-out" data-aos-duration="1000">
            <div class="card">
                <div class="form">
                    <div class="left-side">
                        <div class="medium-div">
                            <img src="~/images/salmalogo2.png" alt="magic" />
                        </div>
                    </div>
                    <div class="right-side">
                        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button id="Menu" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                            <div class="carousel-inner" style="height:80%">
                                <div class="carousel-item active">
                                    <img src="~/images/S.A1.jpg" class="d-block w-100" alt="M.Y.O.D SA" style="width:100%;height:500px;">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/images/S.A2.jpg" class="d-block w-100" alt="M.Y.O.D SA" style="width:100%;height:500px;">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/images/S.A3.jpg" class="d-block w-100" alt="M.Y.O.D SA" style="width:100%;height:500px;">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br>
    <!-- Products -->
    @RenderBody()
    <div id="search">  </div>
    <br /><br />

    <!--Search-->

    <section class="MenSec" data-aos="fade-left" data-aos-duration="1500">
        @RenderSection("search")
        <br />
        <p class="Title">البحث عن تصميم</p>
        <br />
        <div class="Formm">
            @if (ViewBag.Title == "LogIn" || ViewBag.Title == "Search" || ViewBag.Title == "Index" || ViewBag.Title == "Search-Result")
            {
                using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "form-detailss" }))
                {
                    <div>
                        <img src="~/images/salmalogo.png" alt="M.Y.O.D" style="width: 200px;border-radius:15px;">
                    </div>
                    <br />
                    <div class="Itemss">
                        <label class="labell">البحث عن :</label>
                        <label class="radio size-radio">فئه : @Html.RadioButton("searchBy", "Category", htmlAttributes: new { @class = "rad" })</label>
                        <label class="size-radio">تصميم :  @Html.RadioButton("searchBy", "Item", true)</label>
                    </div>
                    <div class="Itemss">
                        <label class="labell">البحث : </label>
                        <input type="search" value="@ViewData["GetDetails"]" name="Search" placeholder="بحث ..." class="inputt" />
                    </div>
                    <div id="about">
                        <input type="submit" class="submitt" value="بحث">
                    </div>
                }

            }
            else
            {
                using (Html.BeginForm("SearchEdit", "Home", FormMethod.Get, new { @class = "form-detailss" }))
                {
                    <div>
                        <img src="~/images/salmalogo.png" alt="M.Y.O.D" style="width: 200px;border-radius:15px">
                    </div>
                    <br />
                    <div class="Itemss">
                        <label class="labell">البحث عن : </label>
                        <label class="radio size-radio">فئه :    @Html.RadioButton("searchBy", "Category", htmlAttributes: new { @class = "rad" })</label>
                        <label class="size-radio">تصميم : @Html.RadioButton("searchBy", "Item", true)</label>
                    </div>
                    <div class="Itemss">
                        <label class="labell" style="width: 110px;">البحث :</label>
                        <input type="search" value="@ViewData["GetDetails"]" name="Search" placeholder="بحث ..." class="inputt" />
                    </div>
                    <div id="about">
                        <input type="submit" class="submitt" value="بحث">
                    </div>
                }

            }

        </div>
    </section>

    <br /><br />
    <!--AboutUs-->
    <section class="aboutSection" data-aos="zoom-in" data-aos-duration="1000">
        <label class="Title">معلومات عنا</label>
        <div class="about">
            <div class="card-about col-xl-4 col-lg-4" data-aos="fade-left" data-aos-duration="1500">

                <div class="face front-face">
                    <img src="~/images/randa.jpg" alt="Randa Mostafa" class="profile">
                    <div class="pt-3 name"> Randa Mostafa </div>
                    <div class="designation">Back-End Developer</div>
                </div>
                <div class="face back-face">
                    <span class="fas fa-quote-left"></span>
                    <div class="testimonial"> specialist in database , make database that store data and use mySql to build it. </div> <span class="fas fa-quote-right"></span>
                </div>
            </div>
            <div class="card-about col-xl-4 col-lg-4" data-aos="fade-down" data-aos-duration="1500">
                <div class="face front-face">
                    <img src="~/images/noran.jpg" alt="Noran Ahmed" class="profile">
                    <div class="pt-3 name"> Noran Ahmed </div>
                    <div class="designation">Front-End Developer</div>
                </div>
                <div class="face back-face">
                    <span class="fas fa-quote-left"></span>
                    <div class="testimonial"> specialist in fornt-end and make a user interface by modern tools like HTML5, CSS3 .  </div> <span class="fas fa-quote-right"></span>
                </div>
            </div>
            <div class="card-about col-xl-4 col-lg-4" data-aos="fade-right" data-aos-duration="1500">
                <div class="face front-face">
                    <img src="~/images/rewan.jpg" alt="Rewan Wanas" class="profile">
                    <div class="pt-3 name"> Rewan Wanas </div>
                    <div class="designation">Front-End Developer</div>
                </div>
                <div class="face back-face">
                    <span class="fas fa-quote-left"></span>
                    <div class="testimonial"> Specialist in libraries part of the project using BootStrap,Google Fonts,Animation On Scroll & Fontawesome </div> <span class="fas fa-quote-right"></span>
                </div>
            </div>
            <div class="card-about col-xl-6 col-lg-6" data-aos="fade-down" data-aos-duration="1500">
                <div class="face front-face">
                    <img src="~/images/M3aty.png" alt="Mohamed Abo-Elmaaty" class="profile">
                    <div class="pt-3 name"> Mohamed Abo-Elmaaty </div>
                    <div class="designation">Full-Stack Developer</div>
                </div>
                <div class="face back-face">
                    <span class="fas fa-quote-left"></span>
                    <div class="testimonial"> Full stack developer , make modern web site with ASP.NET and attach all component of web site together. </div> <span class="fas fa-quote-right"></span>
                </div>
            </div>
            <div class="card-about col-xl-6 col-lg-6" data-aos="fade-up" data-aos-duration="1500">
                <div class="face front-face ">
                    <img src="~/images/mokhtar.jpg" alt="Mahmoud Mokhtar" class="profile">
                    <div class="pt-3 name"> Mahmoud Mokhtar </div>
                    <div class="designation">Front-End Developer</div>
                </div>
                <div class="face back-face">
                    <span class="fas fa-quote-left"></span>
                    <div class="testimonial">specialist in front-end and make responsive and dynamice web site by JavaScript & JQuery. </div> <span class="fas fa-quote-right"></span>
                </div>
            </div>
        </div>

    </section>
    <br /><br />
    <!-- Footer -->
    <footer id="Social" data-aos="fade-up" data-aos-duration="1500">
        <div class="Footer">
             <img src="~/images/salmalogo.png" alt="magic" width="200" />
            <ul>
                <li>
                    <a href="#" target="_blank"><i class="font fab fa-facebook FB"></i>FaceBook</a>
                </li>
                <li>
                    <a href="#" target="_blank"><i class="font fab fa-twitter TW"></i>Twitter</a>
                </li>
                <li>
                    <a href="#" target="_blank"><i class="font fab fa-linkedin-in LI"></i> Linkedin</a>
                </li>
                <li>
                    <a href="#" target="_blank"><i class="font fab fa-youtube YT"></i> Youtube</a>
                </li>
            </ul>
        </div>
        <div class="bottom-footer">
            <p>Made With &hearts; By  (N.R.R.M.M)  &copy; 2022 </p>
        </div>
    </footer>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.13.1.min.js"></script>
    <script src="~/Scripts/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="https://kit.fontawesome.com/f30b8a998c.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>
</html>